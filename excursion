people_count = int(input())
nights_count = int(input())
transport_cards_count = int(input())
museum_tickets_count = int(input())

nights_price = 20
transport_cards_price = 1.60
ticket_museum_price = 6

total_nights_price = nights_count * nights_price
total_transport_cards_price = transport_cards_count * transport_cards_price
total_museum_tickets_count = ticket_museum_price * museum_tickets_count

one_person_price = total_transport_cards_price + total_nights_price + total_museum_tickets_count
total_costs = people_count * one_person_price
unexpected_costs = 0.25 * total_costs
final_costs = total_costs + unexpected_costs

print(f"{final_costs:.2f}")
